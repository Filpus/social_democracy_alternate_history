title: Party Disunity
new-page: true
is-card: true
view-if: party_disunity_timer = 0 and (dissent >= 0.3 or (liberals_dissent > 30 and not liberalss_resign) or (pragmatists_dissent > 30 and not pragmatists_resign) or (progressives_dissent > 30 and not sapd_formed) or (conservatives_dissent > 30 and not unions_independent) or (neorevisionist_dissent > 30 and neorevisionism))
on-arrival: month_actions += 1; party_disunity_timer = 4
card-image: img/Reichstagsfraktion_der_SPD.jpg
frequency: 200
tags: party_affairs

